<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">btcpay_transaction_form.transaction_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Storefront\BTCPay\Block\Adminhtml\Transaction\Edit\BackButton" name="back"/>
			<button class="Storefront\BTCPay\Block\Adminhtml\Transaction\Edit\DeleteButton" name="delete"/>
			<button class="Storefront\BTCPay\Block\Adminhtml\Transaction\Edit\SaveButton" name="save"/>
			<button class="Storefront\BTCPay\Block\Adminhtml\Transaction\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>btcpay_transaction_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>btcpay_transaction_form.transaction_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="transaction_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Storefront\BTCPay\Model\Transaction\DataProvider" name="transaction_form_data_source">
			<settings>
				<requestFieldName>transaction_id</requestFieldName>
				<primaryFieldName>transaction_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label/>
		</settings>
		<field formElement="input" name="transaction_status" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Transaction</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">transaction_status</label>
				<dataScope>transaction_status</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
